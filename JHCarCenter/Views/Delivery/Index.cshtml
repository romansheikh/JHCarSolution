@model IEnumerable<Sales>
@{
    ViewData["Title"] = "Index";
}



<div class="card-header">
    <h3 class="text-center">Delivaries</h3>
</div>
<div class="row mt-4">
    @foreach (var item in Model)
    {
        int remaining = Convert.ToInt32((item.DelivaryLastDate - DateTime.Now).TotalDays);
        <div class="col-md-4 col-sm-6">
            <div class="card m-3">
                <div class="card-header">
                    <h3 class="text-center">@item.Quatation.Customer.CustomerName</h3>
                </div>
                <div>
                    <p><b>Vehicle : </b>@item.Quatation.Vehicle.VehicleName</p>
                    <p><b>Price : </b>Tk. @item.Quatation.Vehicle.UnitPrice</p>
                    @if (!item.IsDeliverd)
                    {
                        <p><b>Remaining Days : </b>@remaining days</p>
                    }
                    else
                    {
                        <p><b>Delivered</b></p>
                    }

                </div>

                <div class="card-footer text-center">
                    <a asp-action="Details" asp-controller="Quatation" asp-route-id="@item.QuatationID" class="btn btn-primary">Details</a>
                </div>
            </div>

        </div>
    }
</div>



