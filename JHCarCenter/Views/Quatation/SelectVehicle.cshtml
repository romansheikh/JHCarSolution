@model SelectVehicleVM
@{
    ViewData["Title"] = "SelectVehicle";
    
}

<div class="card">
    <div class="card-header">
        <p>Customer Information</p>
    </div>
    <div class="card-body">
        <label>Customer Name</label>
        <p>@Model.Customer.CustomerName</p>
    </div>

</div>

<h1>SelectVehicle</h1>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Vehicle Name
                </th>
                <th>
                    CC
                </th>
                <th>
                    Color
                </th>
                <th>
                    Load Capacity
                </th>

                <th>
                    Manfacture Year
                </th>
                <th>
                    Unit Price
                </th>
                <th>Action(s)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Vehicles)
            {
                if (!item.IsSales)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cubic_Capacity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color.ColorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoadCapacity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ManfactureYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitPrice)
                        </td>
                        <td>
                            <a asp-action="Create" asp-route-vid="@item.VehicleID" asp-route-cid="@Model.Customer.CustomerID" class="btn btn-outline-primary">Select</a>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>

